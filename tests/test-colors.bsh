#!/usr/bin/env bash

. "$(dirname "${BASH_SOURCE[0]}")/testlib.sh"
. "$(dirname "${BASH_SOURCE[0]}")/test_utils.bsh"

VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
. "${VSI_COMMON_DIR}/linux/colors.bsh"

begin_test "Basic color codes"
(
  setup_test

  color_setup

  [ "${RED}" = $'\e[31m' ]
  [ "${RED_BG}" = $'\e[41m' ]
  [ "${LIGHT_RED}" = $'\e[91m' ]
  [ "${LIGHT_RED_BG}" = $'\e[101m' ]

  [ "${DIM}" = $'\e[2m' ]
  [ "${RESET_DIM}" = $'\e[22m' ]
  [ "${RESET}" = $'\e[0m' ]
  [ "${NC}" = "${RESET}" ]

  [ "$(FG 25)" = $'\e[38;5;25m' ]
  [ "$(BG 35)" = $'\e[48;5;35m' ]
)
end_test

begin_test "get colors"
(
  setup_test

  color_setup
  COLORS=("${RED}" "${YELLOW}")
  get_color foo
  check_a COLOR_DB_NAMES foo
  check_a COLOR_DB_COLORS "${RED}"
  get_color bar
  get_color foobar
  check_a COLOR_DB_NAMES foo bar foobar
  check_a COLOR_DB_COLORS "${RED}" "${YELLOW}" "${RED}"
)
end_test
